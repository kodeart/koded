{
  "name": "koded/framework",
  "type": "library",
  "license": "BSD-3-Clause",
  "description": "Micro framework for RESTful apps",
  "homepage": "https://kodeart.github.io/koded/",
  "support": {
    "issues": "https://github.com/kodeart/koded/issues",
    "source": "https://github.com/kodeart/koded"
  },
  "keywords": [
    "rest",
    "micro",
    "framework"
  ],
  "require": {
    "php": "^8",
    "psr/http-server-middleware": "^1",
    "koded/container": "^2.3",
    "koded/cache-simple": "^3",
    "koded/http": "^3.1",
    "koded/logging": "^3.1",
    "koded/session": "2.*",
    "filp/whoops": "^2.7",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "exclude-from-classmap": [
      "bench/",
      "build/",
      "cache/",
      "docs/",
      "locales/",
      "public/",
      "site/",
      "tests/"
    ],
    "files": [
      "src/Support/errors.php",
      "src/Support/semver.php",
      "src/Support/responders.php",
      "src/Support/functions.php"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "symfony/var-dumper": "^5"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Koded\\Framework\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "suggest": {
    "ext-gettext": "Required to use the I18n with gettext support",
    "ext-zlib": "Required for various development operations"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}